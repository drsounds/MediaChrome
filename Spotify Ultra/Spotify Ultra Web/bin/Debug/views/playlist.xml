<?

?>
<view>
	<section name="Playlist" list="true">
		<label size="20" height="40" width="-1">@{parameter}</label>
		<?
		var description = synchronize_data("http://spotiapps.krakelin.com/playlists/"+parameter);
		if(!description){
			description="No description available";
		} 
		?>
		<label size="10" height="50" width="-1" color="#aaaaaa">@{description}</label>
		<space height="70"/>
		<?
		for(var i=0; i < 15; i++){
		?>
		<entry height="18" width="-1">
			<title>Item @{i}</title>
			<artist>Example artist</artist>
			<album>Example album</album>
		</entry>
		<? } ?>
	</section>
</view>